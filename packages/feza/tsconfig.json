{
  "extends": "../typescript-config/react-library.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "react": ["./node_modules/@types/react"]
    },
    "noEmit": true
  },
  "include": ["src", "tsup.config.ts"],
  "exclude": ["node_modules"]
}
